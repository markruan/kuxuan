                        },
                        indicator: {
                            align: 'right',
                            color: '#FFFFFF',
                            activeColor: '#DA70D6'
                        }
                    },
                    placeholderImg: 'widget://image/default.jpg',
                    contentMode: 'scaleToFill',
                    cornerRadius: 10,
                    scrollerCorner:10,
                    interval: 5,
                    fixedOn: api.frameName,
                    loop: true,
                    fixed: false
                }, function(ret, err) {
                    
                    if (ret.eventType == "click" && data[ret.index].targetType == 1000) {
                        var lid = data[ret.index].targetId
                        openMusicList(lid)
                    } else if (ret.eventType == "click" && data[ret.index].targetType == 10) {
                        $ku.getAlbumList({
                            id: data[ret.index].targetId
                        }, function(ret, err) {
                            if (ret.album.copyrightId != -1) {

                                openAlubm(ret.album)
                            } else {
                                api.toast({
                                    msg: '版权问题无法试听',
                                    duration: 2000,
                                    location: 'bottom'
                                });

                            }
                        });

                    } else if (ret.eventType == "click" && data[ret.index].targetType == 1004) {
                        openMv(data[ret.index].targetId)
                    }
                });
            } else {
                // alert(JSON.stringify(err));
            }
        });

        getKuList()
        getTuiList()
        getArtists()
        getAlbumList()
        getmvlist()
        getVideoList()
        tui()

    }

    function openAlbum(index) {
        var data, info
        openAlubm(albumdata[index])
    }
    //  打开每日推荐
    function openDaily() {
        if (panduan()) {
            api.openWin({
                name: 'dailymusic',
                url: './dailymusic.html',
                reload: true,
                animation: {
                    type: "movein", //动画类型（详见动画类型常量）
                    subType: "from_right", //动画子类型（详见动画子类型常量）
                    duration: 500
                }
            });
        }
    }

    //  获取推荐歌单
    function getTuiList() {
        $ku.GetRecommend(function(ret, err) {
            if (ret.code == 200) {
                var html = ''
                ret = ret.recommend
                for (i = 0; i < ret.length&&i<6; i++) {
                    var Idd = ret[i].id
                    var coverImgUrl = imageCache(ret[i].picUrl + '?param=180y180')
                    var tracksName = ret[i].name
                    html += '<div class="list H-display-table-cell H-float-left  H-box-sizing-border-box H-width-avg-3 H-padding-horizontal-right-8  H-margin-vertical-bottom-10" tapmode onclick="openMusicList(' + Idd + ')">';
                    html += '<img     src="' + coverImgUrl + '" class=" animated fadeIn H-width-100-percent H-display-block H-paper-2" style="border-radius: 3px"    >';
                    html += '<div class="H-text-align-center H-font-size-10 H-padding-vertical-top-5 H-text-show-row-1">' + tracksName.substring(0, 16) + '</div></div>';
                    api.refreshHeaderLoadDone();
                }
                var obj = $api.byId('tuilist');
                $api.html(obj, html);
            } else {
                $api.addCls($api.byId('tuitTitle'), 'H-display-none-important');
            }
        })
    }

