    function openWin(id, title) {
        if (!panduan()) {} else {
            var data = {
                id: id,
                title: title
            }
            api.openWin({
                name: id + 'win',
                url: '../../html/ucenter/shou_head.html',
                animation: {
                    type: "movein", //动画类型（详见动画类型常量）
                    subType: "from_right", //动画子类型（详见动画子类型常量）
                    duration: 400 //动画过渡时间，默认300毫秒
                },
                pageParam: data
            });
        }
    }

    function getArtists() {
         
        $ku.getartists({
            limit: 6
        }, function(ret, err) {
            $api.setStorage('mlist', ret.artists);

            if (ret.code = 200) {
                var render = H.tppl(H.D("#artists_tppl").innerHTML);
                H.D("#artists").innerHTML = render(ret);

                $api.removeCls($api.byId('body'), 'H-display-none');
            } else {
                api.toast({
                    msg: '网络错误',
                    duration: 2000,
                    location: 'bottom'
                });
            }
        })
    }

    // 打开热门
    function openUICoverFlow(data) {
        var UICoverFlow = api.require('UICoverFlow');

        UICoverFlowToTop=$api.offset($api.byId('rank')).h?$api.offset($api.byId('rank')).h:765
        UICoverFlow.open({
            rect: {
                x: 10,
                y: UICoverFlowToTop,
                w: api.winWidth - 20,
                h: 200
            },
            styles: {
                bg: '#fff',
                image: {
                    activeW: api.winWidth - 150,
                    activeH: 130,
                    corner: 3,
                    placeholder: 'widget://image/default.jpg'
                }
            },
            images: data,
            indicator: { //（可选项）JSON 类型；指示器的样式设置；默认：未设置时不显示
                bg: '#c19e9e', //（可选项）字符串类型；指示器未激活时的背景，支持 rgb，rgba，#；默认：#eee
                active: '#f00', //（可选项）字符串类型；指示器激活时的背景，支持 rgb，rgba，#；默认：#eee
            },
            index: 2,
            interval: 2000,
            fixedOn: api.frameName,
            fixed: false
        }, function(ret, err) {
            if (ret) {
                if (ret.eventType == 'click') {
                    var id = data[ret.index].id
                    openMusicList(id)
                }
            } else {
                alert(JSON.stringify(err));
            }
        });
    }

