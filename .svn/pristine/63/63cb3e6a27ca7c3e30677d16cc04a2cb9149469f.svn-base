    function tui() {

        getCache('hot', 'hot', function(ret, err) {

            if (ret.data) {
                var data = $api.strToJson(ret.data)
                    // delCache('hot','hot')
                openUICoverFlow(data)
                // api.execScript({script: "stoploading()",name:'index'})

            } else {
                $ku.getTopList(function(ret, err) {

                    if (ret.code == 200) {
                        var data1 = ret.list
                        var data = []
                        for (var i = 0; i < 10; i++) {
                            var obj = {}
                            obj.url = data1[i].coverImgUrl + '?param=300y220"'
                            obj.id = data1[i].id
                            data[i] = obj
                        }
                        // console.log(JSON.stringify(data));
                        openUICoverFlow(data)
                        // api.execScript({script: "stoploading()",name:'index'})
                        saveCache('hot', 'hot', data)
                        // stoploading()
                    } else {
                        alert(JSON.stringify(err));
                    }
                });

            }
        })
    }

    function getKuList() {
        api.readFile({
            path: api.fsDir + '/cache/indexPersonalized.json',
        }, function(ret, err) {
